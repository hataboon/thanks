# See https://git-scm.com/docs/gitattributes for more about git attribute files.

# Mark the database schema as having been generated.
db/schema.rb linguist-generated

# Mark any vendored files as having been vendored.
vendor/* linguist-vendored

# Rails credentials
config/credentials/*.yml.enc diff=rails_credentials
config/credentials.yml.enc diff=rails_credentials

# Default to auto line-ending conversion
* text=auto eol=crlf

# Explicitly declare files you want to always be converted to CRLF
*.tsx text eol=crlf
*.yml text eol=crlf
*.rb text eol=crlf
*.js text eol=crlf
*.jsx text eol=crlf
*.ts text eol=crlf
*.json text eol=crlf
*.md text eol=crlf
*.html text eol=crlf
*.css text eol=crlf
*.scss text eol=crlf
Dockerfile* text eol=crlf

# Declare files that will always have LF line endings on checkout.
*.sh text eol=lf

# Denote all files that are truly binary and should not be modified.
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary